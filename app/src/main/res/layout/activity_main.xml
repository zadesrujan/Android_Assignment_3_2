<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.example.user.android_assignment_3_2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Enter Card Balance($)"
            android:textColor="#fcfbfb"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Enter Yearly Interest Rate(%)"
            android:textColor="#f1ecec"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Enter Minimum Payment($)"
            android:textColor="#f1ecec"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Final Card Balance($)"
            android:textColor="#f1ecec"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Months Remaining"
            android:textColor="#f1ecec"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="Interest Paid Will Be($)"
            android:textColor="#f1ecec"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=" "
            android:background="#f9f5f5"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COMPUTE"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR"/>

</LinearLayout>

